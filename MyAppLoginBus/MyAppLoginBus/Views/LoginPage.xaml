<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAppLoginBus.Views.LoginPage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
        <Label x:Name="Lbl_UserName" Text="User Name" />
        <Entry x:Name="Entry_UserName" Placeholder="Enter User Name" />
        <Label x:Name="Lbl_Password" Text="Password" />
        <Entry x:Name="Entry_Password" Placeholder="Enter Password" IsPassword="True" />
        <Button x:Name="Btn_Login" Text="Login" Clicked="LoginProcedure"/>
        <Button x:Name="Btn_SignUp" Text="SignUp" Clicked="SignUpProcedure" />
    </StackLayout>
</ContentPage>